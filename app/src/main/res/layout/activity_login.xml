<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activities.Login"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/whiteLayout"
        android:layout_height="match_parent"
        android:background="@drawable/redondeolay"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="550px"
            android:src="@drawable/top"
            android:id="@+id/LogoInnvestiga"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp" />

        <LinearLayout
            android:visibility="gone"
            android:orientation="horizontal"
            android:padding="5px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LogoInnvestiga"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp"
            android:id="@+id/linearCliente">

            <TextView
                android:layout_weight="0.17"
                android:gravity="center"
                android:layout_margin="5px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblCliente"
                android:textColor="@color/blackText"
                android:textSize="18sp"
                android:id="@+id/lblCliente" />

            <EditText
                android:layout_height="40dp"
                android:paddingLeft="8px"
                android:background="@drawable/redondeo"
                android:textCursorDrawable="@drawable/cursorcolor"
                android:layout_width="0dp"
                android:id="@+id/txtCliente"
                android:layout_weight="0.82" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="200px"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5px"
            android:id="@+id/linearUser"
            android:layout_below="@+id/linearCliente"
            android:layout_centerHorizontal="true">
            <EditText
                android:paddingLeft="8px"
                android:singleLine="true"
                android:lines="1"
                android:drawableLeft="@drawable/user"
                android:inputType="textAutoComplete"
                android:hint="@string/lblUsuario"
                android:background="@drawable/redondeo"
                android:textCursorDrawable="@drawable/cursorcolor"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/txtUsuario" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="40px"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5px"
            android:id="@+id/linearPassword"
            android:layout_below="@+id/linearUser"
            android:layout_centerHorizontal="true">

            <EditText
                android:paddingLeft="8px"
                android:inputType="textPassword"
                android:hint="@string/lblContraseña"
                android:drawableLeft="@drawable/key"
                android:background="@drawable/redondeo"
                android:textCursorDrawable="@drawable/cursorcolor"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/txtContraseña" />
        </LinearLayout>

        <Button
            android:layout_marginTop="60px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_below="@id/linearPassword"
            android:background="@drawable/selector_gris_invertido"
            android:text="@string/Ingresar"
            android:textSize="18sp"
            android:id="@+id/btnIngresar" />
    </RelativeLayout>
</RelativeLayout>
